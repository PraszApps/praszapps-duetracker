<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/listFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/green_rounded_bg"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="@string/label_owesactions_listview"
        android:textAppearance="@android:style/TextAppearance.Medium" />
    
    <View 
        android:id="@+id/frienddivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/black"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listview_bg"
        android:divider="@color/list_view_divider"
        android:dividerHeight="1dp"
        android:fadingEdge="vertical|horizontal"
        android:fadingEdgeLength="10dp"
        android:fastScrollEnabled="true"
        android:overScrollMode="always"
        android:saveEnabled="true"
        android:scrollingCache="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/empty_friendlist"
        style="@android:style/TextAppearance.Large"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textColor="@color/black_overlay"
        android:text="@string/strNoRecordsFound" >
    </TextView>

</LinearLayout>