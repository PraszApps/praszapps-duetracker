<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="Theme.Actionbar_tab_indicator" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_actionbar_tab_indicator</item>
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar_tab_indicator</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar_tab_indicator</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Actionbar_tab_indicator</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Actionbar_tab_indicator</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Actionbar_tab_indicator</item>
        <item name="actionModeBackground">@drawable/cab_background_top_actionbar_tab_indicator</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_actionbar_tab_indicator</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar_tab_indicator</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Actionbar_tab_indicator.Widget</item>
    </style>

    <style name="ActionBar.Solid.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_actionbar_tab_indicator</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_actionbar_tab_indicator</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_actionbar_tab_indicator</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar_tab_indicator</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_actionbar_tab_indicator</item>
        <item name="progressBarStyle">@style/ProgressBar.Actionbar_tab_indicator</item>
    </style>

    <style name="PopupMenu.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar_tab_indicator</item>
    </style>

    <style name="DropDownListView.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_actionbar_tab_indicator</item>
    </style>

    <style name="ActionBarTabStyle.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar_tab_indicator</item>
    </style>

    <style name="DropDownNav.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_actionbar_tab_indicator</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar_tab_indicator</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_actionbar_tab_indicator</item>
    </style>

    <style name="ProgressBar.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar_tab_indicator</item>
    </style>

    <style name="ActionButton.CloseMode.Actionbar_tab_indicator" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_actionbar_tab_indicator</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Actionbar_tab_indicator.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Actionbar_tab_indicator</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Actionbar_tab_indicator</item>
    </style>
    
    <style name="btn_style">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColor">@color/submit_button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="save_btn_style">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/label_save</item>
        <item name="android:textColor">@color/submit_button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>