JSONObject responseJson = null;
			String id, authorName, postTitle, categories = "", mediaThumbnail, link, published;
			JSONArray postsJson = null;
			
			try {
				responseJson = new JSONObject(response);
				postsJson = responseJson.getJSONObject("feed").getJSONArray("entry");
			} catch (JSONException e) {
				textViewResponse.setText(e.getMessage());
			} 
			
			int index = 2;
			
			// Getting ID
			try {
				id = postsJson.getJSONObject(index).getJSONObject("id").getString("$t");
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching ID -- "+e.getMessage());
			}
			
			// Getting name
			try {
				authorName = postsJson.getJSONObject(index).getJSONArray("author").getJSONObject(0).getJSONObject("name").getString("$t");
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching Author name -- "+e.getMessage());
			}
			
			// Getting categories
			JSONArray categoryArrayJson;
			try {
				categoryArrayJson = postsJson.getJSONObject(index).getJSONArray("category");
				for (int i = 0; i < categoryArrayJson.length(); i++) {
					if(i < categoryArrayJson.length()-1) {
						categories = categories + categoryArrayJson.getJSONObject(i).getString("term")+", ";
					} else {
						categories = categories + categoryArrayJson.getJSONObject(i).getString("term");
					}
				}
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching Categories -- "+e.getMessage());
			}
			
			
			// Getting title
			try {
				postTitle = postsJson.getJSONObject(index).getJSONObject("title").getString("$t");
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching Title -- "+e.getMessage());
			}
			
			// Getting media thumbnail URL
			try {
				mediaThumbnail = postsJson.getJSONObject(index).getJSONObject("media$thumbnail").getString("url");
			} catch (JSONException e) {
				mediaThumbnail = "";
			}
			
			// Getting link to post
			try {
				link = postsJson.getJSONObject(index).getJSONArray("link").getJSONObject(4).getString("href");
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching link -- "+e.getMessage());
			}
			
			// Getting date of publish
			try {
				published = postsJson.getJSONObject(index).getJSONObject("published").getString("$t");
			} catch (JSONException e) {
				textViewResponse.setText("Error fetching published -- "+e.getMessage());
			}
			
			//textViewResponse.setText(categories);
			//Log.e("Pani", postsJson.getJSONObject(2).toString());
